{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
      "moduleMultipleStorageAccounts": {
        "type": "object"
      },
      "customTages": {
        "type": "object"
      }
    },
    "variables": {
      "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "copy" : {
                "name": "storageAccounts",
                "count": "[length(parameters('moduleMultipleStorageAccounts').accounts)]"
            },
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[take(concat(toLower(parameters('moduleMultipleStorageAccounts').accounts[copyIndex('storageAccounts')].saName),uniquestring(resourceGroup().id)),24)]",
            "apiVersion": "2018-02-01",
            "dependsOn": [],
            "tags": "[parameters('customTages')]",
            "location": "[variables('location')]",
            "kind": "[parameters('moduleMultipleStorageAccounts').accounts[copyIndex('storageAccounts')].kind]",
            "sku": {
                "name": "[parameters('moduleMultipleStorageAccounts').accounts[copyIndex('storageAccounts')].storageAccountType]"
            },
            "properties": {
                "accessTier": "[parameters('moduleMultipleStorageAccounts').accounts[copyIndex('storageAccounts')].accesstier]"
            },
            "resources": [
                {
                    "name": "[concat('default/', parameters('moduleMultipleStorageAccounts').accounts[copyIndex('storageAccounts')].containerName)]",
                    "type": "blobServices/containers",
                    "apiVersion": "2018-03-01-preview",
                    "condition": "[equals(parameters('moduleMultipleStorageAccounts').accounts[copyIndex('storageAccounts')].blob, 'Yes')]",
                    "dependsOn": [
                        "storageAccounts"
                    ],
                    "properties": {
                        "publicAccess": "[parameters('moduleMultipleStorageAccounts').accounts[copyIndex('storageAccounts')].publicAccess]"
                    } 
                }
            ]    
        }
        
      ], 
    "outputs": {
    }
}

  