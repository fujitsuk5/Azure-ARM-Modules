{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
      "moduleMultipleVirtualMachines": {
        "type": "object"
      },
      "customTages": {
        "type": "object"
      }
    },
    "variables": {
      "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "copy" : {
                    "name": "virtualMachines",
                    "count": "[length(parameters('moduleMultipleVirtualMachines').vms)]"
            },
            "type": "Microsoft.Compute/virtualMachines",
            "comments": "Module to create one or more Virtual Machines",
            "apiVersion": "2017-03-30",
            "name": "[parameters('moduleMultipleVirtualMachines').vms[copyIndex('virtualMachines')].vmName]",
            "tags": "[parameters('customTages')]",
            "location": "[variables('location')]",
            "properties": {
                "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('moduleMultipleVirtualMachines').vms[copyIndex('virtualMachines')].vmSize]"
                },
                "osProfile": {
                    "computerName": "[parameters('moduleMultipleVirtualMachines').vms[copyIndex('virtualMachines')].vmName]",
                    "adminUsername": "parameters('moduleMultipleVirtualMachines').vms[copyIndex('virtualMachines')].adminUsername]",
                    "adminPassword": "[parameters('moduleMultipleVirtualMachines').vms[copyIndex('virtualMachines')].adminPassword]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[parameters('moduleMultipleVirtualMachines').vms[copyIndex('virtualMachines')].publisher]",
                        "offer": "[parameters('moduleMultipleVirtualMachines').vms[copyIndex('virtualMachines')].offer]",
                        "sku": "[parameters('moduleMultipleVirtualMachines').vms[copyIndex('virtualMachines')].sku]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('moduleMultipleVirtualMachines').vms[copyIndex('virtualMachines')].vmName,'-osdisk')]",
                        "createOption": "parameters('moduleMultipleVirtualMachines').vms[copyIndex('virtualMachines')].osCreateOption"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('moduleMultipleVirtualMachines').vms[copyIndex('virtualMachines')].nicName)]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": "true",
                        "storageUri": "[concat(reference(concat('Microsoft.Storage/storageAccounts/',parameters('moduleMultipleVirtualMachines').vms[copyIndex('virtualMachines')].storageAccountName), '2016-01-01').primaryEndpoints.blob)]"
                    }
                }
            }
        }
      }
    ], 
    "outputs": {
    }
}


  