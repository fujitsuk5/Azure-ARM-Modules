{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
      "moduleCreateNetworkSecurityGroupWithASGBasedRules": {
        "type": "object"
      },
      "customTages": {
        "type": "object"
      }
    },
    "variables": {
      "defaultLocation": "[resourceGroup().location]",
      "copy" : [
        {
            "name": "securityRules",
            "count": "[length(parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').rules)]",
            "input" : {   
                "name": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').rules[copyIndex('securityRules')].name]",
                "properties": {
                    "description": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').rules[copyIndex('securityRules')].description]",
                    "sourceAddressPrefix": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').rules[copyIndex('securityRules')].sourceAddressPrefix]",
                    "sourcePortRange": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').rules[copyIndex('securityRules')].sourcePortRange]",
                    "direction": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').rules[copyIndex('securityRules')].direction]",
                    "access": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').rules[copyIndex('securityRules')].access]",
                    "priority": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').rules[copyIndex('securityRules')].priority]",
                    "protocol": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').rules[copyIndex('securityRules')].protocol]",
                    "destinationPortRange": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').rules[copyIndex('securityRules')].destinationPortRange]",
                    "destinationApplicationSecurityGroups": [
                        {
                             "id":  "[resourceId('Microsoft.Network/applicationSecurityGroups',parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').rules[copyIndex('securityRules')].destinationApplicationSecurityGroups)]"     
                        }
                    ]
                }
            }
        }
      ]
    },
    "resources": [
      {
        "name": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').nsgName]",
        "type": "Microsoft.Network/networkSecurityGroups",
        "comments": "Module to create a Network Security Group with multiple ASG associated rules",
        "apiVersion": "2018-08-01",
        "tags": "[parameters('customTages')]",
        "location": "[if(equals(parameters('moduleCreateApplicationSecurityGroups').location, json('null')), variables('defaultLocation'), parameters('moduleCreateApplicationSecurityGroups').location)]",
        "properties": {
            "securityRules": "[variables('securityRules')]"    
        }
      }
    ],
    "outputs": {
    }
}

  