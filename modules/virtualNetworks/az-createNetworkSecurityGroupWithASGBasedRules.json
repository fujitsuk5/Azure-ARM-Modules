{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
      "moduleCreateNetworkSecurityGroupWithASGBasedRules": {
        "type": "object"
      },
      "customTages": {
        "type": "object"
      }
    },
    "variables": {
      "defaultLocation": "[resourceGroup().location]"
    },
    "resources": [
      {
        "copy" : {
          "name": "asgNSGGroups",
          "count": "[length(parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').nsgNames)]"
        },
        "name": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').nsgNames[copyIndex('asgNSGGroups')].nsgName]",
        "type": "Microsoft.Network/networkSecurityGroups",
        "comments": "Module to create a Network Security Group with multiple ASG associated rules",
        "apiVersion": "2018-08-01",
        "tags": "[parameters('customTages')]",
        "location": "[if(equals(parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').location, json('null')), variables('defaultLocation'), parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').location)]",
        "properties": {
            "securityRules": [
              {
                "copy" : {
                    "name": "nsgRules",
                    "count": "[length(parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').nsgNames[copyIndex('asgNSGGroups')].rules)]"
                  },
                  "name": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').nsgNames[copyIndex('asgNSGGroups')].rules[copyIndex()].name]",
                  "properties": {
                    "description": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').nsgNames[copyIndex('asgNSGGroups')].rules[copyIndex()].description]",
                    "sourceAddressPrefix": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').nsgNames[copyIndex('asgNSGGroups')].rules[copyIndex()].sourceAddressPrefix]",
                    "sourcePortRange": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').nsgNames[copyIndex('asgNSGGroups')].rules[copyIndex()].sourcePortRange]",
                    "direction": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').nsgNames[copyIndex('asgNSGGroups')].rules[copyIndex()].direction]",
                    "access": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').nsgNames[copyIndex('asgNSGGroups')].rules[copyIndex()].access]",
                    "priority": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').nsgNames[copyIndex('asgNSGGroups')].rules[copyIndex()].priority]",
                    "protocol": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').nsgNames[copyIndex('asgNSGGroups')].rules[copyIndex()].protocol]",
                    "destinationPortRange": "[parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').nsgNames[copyIndex('asgNSGGroups')].rules[copyIndex()].destinationPortRange]",
                    "destinationApplicationSecurityGroups": [
                      {
                        "id":  "[resourceId('Microsoft.Network/applicationSecurityGroups',parameters('moduleCreateNetworkSecurityGroupWithASGBasedRules').nsgNames[copyIndex('asgNSGGroups')].rules[copyIndex()].destinationApplicationSecurityGroups)]"     
                      }
                    ]
                  }
              }

            ]          
        }
      }
    ],
    "outputs": {
    }
}

  