{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
      "module-NSG-1": {
        "type": "object"
      },
      "asgName": {
        "type": "string"
      },
      "customTages": {
        "type": "object"
      }
    },
    "variables": {
      "location": "[resourceGroup().location]",
      "appAsgId": "[resourceId('Microsoft.Network/applicationSecurityGroups',parameters('asgName'))]",
      "copy" : [
        {
            "name": "securityRules",
            "count": "[length(parameters('module-NSG-1').rules)]",
            "input" : {   
                "name": "[parameters('module-NSG-1').rules[copyIndex('securityRules')].name]",
                "properties": {
                    "description": "[parameters('module-NSG-1').rules[copyIndex('securityRules')].description]",
                    "sourceAddressPrefix": "[parameters('module-NSG-1').rules[copyIndex('securityRules')].sourceAddressPrefix]",
                    "sourcePortRange": "[parameters('module-NSG-1').rules[copyIndex('securityRules')].sourcePortRange]",
                    "direction": "[parameters('module-NSG-1').rules[copyIndex('securityRules')].direction]",
                    "access": "[parameters('module-NSG-1').rules[copyIndex('securityRules')].access]",
                    "priority": "[parameters('module-NSG-1').rules[copyIndex('securityRules')].priority]",
                    "protocol": "[parameters('module-NSG-1').rules[copyIndex('securityRules')].protocol]",
                    "destinationPortRange": "[parameters('module-NSG-1').rules[copyIndex('securityRules')].destinationPortRange]",
                    "destinationApplicationSecurityGroups": [
                        {
                            "id": "[variables('appAsgId')]"
                        }
                    ]    
                            
                }
            }
        }
      ]
    },
    "resources": [
      {
        "name": "[parameters('module-NSG-1').nsgName]",
        "type": "Microsoft.Network/networkSecurityGroups",
        "apiVersion": "2018-08-01",
        "tags": "[parameters('customTages')]",
        "location": "[variables('location')]",
        "properties": {
            "securityRules": "[variables('securityRules')]"    
        }
      }
    ],
    "outputs": {
    }
}

  