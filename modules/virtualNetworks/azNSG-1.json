{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
      "module-NSG-1": {
        "type": "object"
      },
      "asgName": {
        "type": "string"
      },
      "customTages": {
        "type": "object"
      }
    },
    "variables": {
      "location": "[resourceGroup().location]",
      "appAsgId": "[resourceId('Microsoft.Network/applicationSecurityGroups',parameters('asgName'))]"
    },
    "resources": [
      {
        
        "name": "[parameters('module-NSG-1').nsgName]",
        "copy" : {
            "name": "nsgRules",
            "count": "[length(parameters('module-NSG-1').rules)]"
          },
        "type": "Microsoft.Network/networkSecurityGroups",
        "apiVersion": "2018-08-01",
        "tags": "[parameters('customTages')]",
        "location": "[variables('location')]",
        "properties": {
            "securityRules": [
                {
                    "name": "[parameters('module-NSG-1').rules[copyIndex()].name]",
                    "properties": {
                        "description": "[parameters('module-NSG-1').rules[copyIndex()].description]",
                        "sourceAddressPrefix": "[parameters('module-NSG-1').rules[copyIndex()].sourceAddressPrefix]",
                        "sourcePortRange": "[parameters('module-NSG-1').rules[copyIndex()].sourcePortRange]",
                        "direction": "[parameters('module-NSG-1').rules[copyIndex()].direction]",
                        "access": "[parameters('module-NSG-1').rules[copyIndex()].access]",
                        "priority": "[parameters('module-NSG-1').rules[copyIndex()].priority]",
                        "protocol": "[parameters('module-NSG-1').rules[copyIndex()].protocol]",
                        "destinationPortRange": "[parameters('module-NSG-1').rules[copyIndex()].destinationPortRange]",
                        "destinationApplicationSecurityGroups": [
                            {
                                "id": "[variables('appAsgId')]"
                            }
                        ] 
                    }

                }
            ]
        }
      }
    ],
    "outputs": {
    }
}
  