{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
      "moduleMultipleNetworkInterfaces": {
        "type": "object"
      },
      "customTages": {
        "type": "object"
      }
    },
    "variables": {
      "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "copy" : {
                    "name": "networkInterfaces",
                    "count": "[length(parameters('moduleMultipleNetworkInterfaces').nics)]"
            },
            "type": "Microsoft.Network/networkInterfaces",
            "comments": "Module to create one or more Network Interfaces",
            "apiVersion": "2017-09-01",
            "name": "[parameters('moduleMultipleNetworkInterfaces').nics[copyIndex('networkInterfaces')].nicName]",
            "tags": "[parameters('customTages')]",
            "location": "[variables('location')]",
            "properties": {
                "ipConfigurations": [   
                    { 
                        "name": "[parameters('moduleMultipleNetworkInterfaces').nics[copyIndex('networkInterfaces')].ipConfigName]",
                        "properties": {
                            "privateIPAllocationMethod": "[parameters('moduleMultipleNetworkInterfaces').nics[copyIndex('networkInterfaces')].privateIPAllocationMethod]",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('moduleMultipleNetworkInterfaces').nics[copyIndex('networkInterfaces')].pipName)]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets',parameters('moduleMultipleNetworkInterfaces').nics[copyIndex('networkInterfaces')].vnetName,parameters('moduleMultipleNetworkInterfaces').nics[copyIndex('networkInterfaces')].subnetName)]"
                            },
                            "applicationSecurityGroups": [
                                {
                                    "id": "[resourceId('Microsoft.Network/applicationSecurityGroups',parameters('moduleMultipleNetworkInterfaces').nics[copyIndex('networkInterfaces')].aSGName)]"
                                }
                            ]
                        }
                    }
                ]
            }
        }
      ], 
    "outputs": {
    }
}


  