{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
      "moduleMultipleNetworkInterfaces": {
        "type": "object"
      },
      "customTages": {
        "type": "object"
      }
    },
    "variables": {
      "location": "[resourceGroup().location]",
      "copy" : [
        {
            "name": "networkInterfaces",
            "count": "[length(parameters('moduleMultipleNetworkInterfaces').nics)]",
            "input" : {   
                "name": "[concat(parameters('moduleMultipleNetworkInterfaces').rules[copyIndex('networkInterfaces')].nicName,'-nic')]",
                "properties": {
                    "ipConfigurations": [
                        {
                            "name": "ipconfigdmz",
                            "properties": {
                                "privateIPAllocationMethod": "[parameters('moduleMultipleNetworkInterfaces').pips[copyIndex('networkInterfaces')].privateIPAllocationMethod]",
                                "publicIPAddress": {
                                    "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('moduleMultipleNetworkInterfaces').pips[copyIndex('networkInterfaces')].pipName)]"
                                },
                                "subnet": {
                                    "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets',parameters('moduleMultipleNetworkInterfaces').pips[copyIndex('networkInterfaces')].subnetName)]"
                                },
                                "applicationSecurityGroups": [
                                    {
                                        "id": "[resourceId('Microsoft.Network/applicationSecurityGroups',parameters('moduleMultipleNetworkInterfaces').pips[copyIndex('networkInterfaces')].publicIPAllocationMethod)]"
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
                    
        }
      ]
    },
    "resources": [
        {
            "name": "[parameters('moduleMultipleNetworkInterfaces').nicName]",
            "type": "Microsoft.Network/networkInterfaces",
            "comments": "Module to create one or more Network Interfaces",
            "apiVersion": "2017-09-01",
            "tags": "[parameters('customTages')]",
            "location": "[variables('location')]",
            "properties": {
                "networkInterfaces": "[variables('networkInterfaces')]"    
            }
          
        }
      ], 
    "outputs": {
    }
}

  